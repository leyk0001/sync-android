<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/default_todo_user"
        android:key="todo_cloudant_username"
        android:summary="@string/pref_summary_username"
        android:title="@string/pref_title_username"/>
    <EditTextPreference
        android:defaultValue="@string/default_todo_dbname"
        android:key="todo_cloudant_dbname"
        android:summary="@string/pref_summary_dbname"
        android:title="@string/pref_title_dbname"/>
    <EditTextPreference
        android:defaultValue="@string/default_todo_api_key"
        android:key="todo_cloudant_api_key"
        android:summary="@string/pref_summary_api_key"
        android:title="@string/pref_title_api_key"/>
    <EditTextPreference
        android:defaultValue="@string/default_todo_api_password"
        android:key="todo_cloudant_api_password"
        android:summary="@string/pref_summary_api_password"
        android:title="@string/pref_title_api_password"/>
    <EditTextPreference
        android:defaultValue="@string/default_todo_unbound_replication_minutes"
        android:key="todo_unbound_replication_minutes"
        android:numeric="integer"
        android:summary="@string/pref_summary_unbound_period"
        android:title="@string/pref_title_unbound_period"/>
    <EditTextPreference
        android:defaultValue="@string/default_todo_bound_replication_minutes"
        android:key="todo_bound_replication_minutes"
        android:numeric="integer"
        android:summary="@string/pref_summary_bound_period"
        android:title="@string/pref_title_bound_period"/>

</PreferenceScreen>